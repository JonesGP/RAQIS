#:kivy 2.2.1
<layout_principal>
    orientation: 'horizontal'
    canvas.before:
        Color:
            rgba: 0.17, 0.02, 0.02, 1
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'horizontal'
    size_hint: 1, 1
    padding: 20
    BoxLayout:
        orientation: 'vertical'
        id: 'menu1'
        size_hint: 0.1, 1
        spacing: 10
        padding: 10
        canvas.before:
            Color: 
                rgba: 0.25, 0.08, 0.08, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: 'titulo'
            text: 'Menu'
            font_size: 20
            size_hint: 1, 0.1
            pos: 0, 0
        Button:
            text: 'Verificar'
            size_hint: 1, 0.1
            on_release: app.verificar_arq(dir_input.text), app.menu_two()
        Button:
            id: testebtn
            text: 'Tirar os primeiros caracteres'
            size_hint: 1, 0.1
            opacity: 0
        Button:
            id: testebtn
            text: 'Botão 2'
            size_hint: 1, 0.1
            opacity: 0
        Button:
            id: testebtn
            text: 'Botão 2'
            size_hint: 1, 0.1
            opacity: 0
        Button:
            id: testebtn
            text: 'Botão 2'
            size_hint: 1, 0.1
            opacity: 0
        Label:
            id: 'vazio'
            size_hint: 1, 0.4
        Label:
            id: 'vazio'
            size_hint: 1, 0.4
    BoxLayout:
        orientation: 'vertical'
        id: 'conteudo'
        size_hint: 0.8, 1
        padding: 10
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.1
            #quero um input text
            TextInput:
                id: dir_input
                #quero adicionar um placeholder
                hint_text: 'Digite o diretório...'
                size_hint: 1, 0.5
            Label:
                id: pasta
                size_hint: 1, 0.5
                text: f'A pasta:'
                pos: -500, 0
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.9
            ScrollView:
                Label:
                    id: conteudo_pasta
                    multi_line: True
                    text: 'Arquivos'
                    font_size: 20
                    size_hint: None, None
                    height: self.texture_size[1]
                    width: self.texture_size[0]
            Label:
                id: 'vazio'
                size_hint: 0.5, 1